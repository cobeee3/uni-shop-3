.scroll-view-container {
  display: flex;
}
.scroll-view-container .left-scroll-view {
  width: 120px;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item {
  background-color: #F7F7F7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item.active {
  background-color: #fff;
  position: relative;
}
.scroll-view-container .left-scroll-view .left-scroll-view-item.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #c00000;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY -50%;
          transform: translateY -50%;
}
.scroll-view-container .cate-lv2 .cate-lv2-title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}
.scroll-view-container .cate-lv3-list {
  display: flex;
  flex-wrap: wrap;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 28%;
  border: 1px solid black;
  margin-bottom: 10px;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item image {
  width: 60px;
  height: 60px;
}
.scroll-view-container .cate-lv3-list .cate-lv3-item text {
  font-size: 12px;
}

